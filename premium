<script>
const PREMIUM_FLAG='fs_is_premium';
document.getElementById('upgrade').onclick=()=>{
  localStorage.setItem(PREMIUM_FLAG,'1');
  const pending = localStorage.getItem('fs_pending_persona');
  if(pending){
    alert('Premium unlocked. Returning you to Advanced…');
    location.href='/advanced.html?applyPersona=1';
  }else{
    alert('Premium unlocked.');
    location.href='/advanced.html';
  }
};
</script>
